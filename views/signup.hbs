

{{# if success}} 

<section class='success'>
	<h3>Success Validation</h3>
	<a href='/logout' >Log out</a>
</section>
{{else}}

<div class="container">
	<div class="col-sm-6 col-sm-offset-3">
		<h3><span class="fa fa-sign-in"></span> {{title}}</h3>
		<!-- show any messages that come back with authentication -->
	 {{# if errors }}
		{{#each errors}}
	<div class="alert alert-danger">{{this.msg}}</div>
	{{/each}}

		{{/if}} 
		 {{# if sent }}
		{{#each sent}}
	<div class="alert alert-success">{{this.msg}}</div>
	{{/each}}

		{{/if}} 
		 <!-- {{# if links }}
		{{#each links}}
	<div class=""><a href="{{this.msg}}" >click here to verify</a></div>
	{{/each}}

		{{/if}} --> 
	<!-- LOGIN FORM -->
	<form action="/users/signup" method="post">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email" required>
		</div>
		<div class="form-group">
			<label>Name</label>
			<input type="text" class="form-control" name="username" value="">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password" value="">
		</div>
		<div class="form-group">
			<label>Re-Enter Password</label>
			<input type="password" name="passwordMatch" class="form-control" value="">
		</div>
		


		<button type="submit" class="btn btn-warning btn-lg">Signup</button>
	</form>
	<hr>
	<p>Already have an account? <a href="/users/login">Login</a></p>
	<p>Or go <a href="/">home</a>.</p>
	
</div>
</div>


{{/if}}
